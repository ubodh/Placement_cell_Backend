<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Coding Ninjas Placement Cell</a>
      <div class="collapse navbar-collapse" id="navbarScroll">
        <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>

          <% if(locals.user){%>
            <li class="nav-item dropdown">

              <a class="nav-link dropdown-toggle" href="/" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">Welcome <%=locals.user.name%></a>

              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/users/signout">LogOut</a></li>
              </ul>
            </li>
            <a class="navbar-brand" href="/company/home">Company List</a>
            <a class="navbar-brand" href="/users/download-csv">Download Report</a>
            <% } else {%>
              <li class="nav-item">
                <a class="nav-link" href="/users/signup">Create Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/signin">Signin</a>
              </li>
              <%}%>
        </ul>
      </div>

      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </nav>
  </nav>
  <% if(locals.error) {%>
    <div class="container mt-3">
      <div class="alert alert-danger" role="alert">
        <%= locals.error %>
      </div>
    </div>
    <%}%>
</header>